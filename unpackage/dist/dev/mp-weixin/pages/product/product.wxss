  .product .screening-condit .sc-price::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-left: 7rpx solid transparent;
    border-right: 7rpx solid transparent;
    border-top: 10rpx solid #B9B9B9;
    bottom: 5rpx;
    right: 82rpx;
}
