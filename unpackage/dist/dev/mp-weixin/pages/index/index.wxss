.index .carousel-section {
  height: 360rpx;
  position: relative;
}
.index .carousel-section swiper {
    height: 100%;
}
.index .swiper-dots {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.index .swiper-dots .swiper-dots-item {
    width: 20rpx;
    height: 10rpx;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.39);
    -webkit-transition: 0.3s;
    transition: 0.3s;
    margin-right: 10rpx;
}
.index .swiper-dots .swiper-dots-item:last-child {
    margin-right: 0;
}
.index .swiper-dots .swiper-dots-active {
    width: 40rpx;
    background-color: #ffffff;
}
